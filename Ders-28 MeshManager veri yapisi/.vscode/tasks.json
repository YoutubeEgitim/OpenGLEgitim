{
    "version": "2.0.0",

    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "command": "cmake",
                "args": [
                    "-DCMAKE_BUILD_TYPE=Debug",
                    "${workspaceFolder}",
                    "-G",
                    "MinGW Makefiles"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/../buildDers28"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "buildKlasorOlustur" ],
       },
        {
            "label": "buildKlasorOlustur",
            "type":"shell",
            "command":"mkdir",
            "windows": {
                "command": "./KlasorOlustur.bat",
                "args": [
                    "buildDers28"
                ]

            },
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "args": [
                "-p",
                "buildDers28"
            ],
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/../buildDers28"
            },
            "command": "make",
            "args": [
                "-l"
            ]
        }
    ]
}