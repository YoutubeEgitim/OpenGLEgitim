{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../buildDers30/OpenGLDers30",
            "windows": {
                "program": "${workspaceFolder}/../buildDers30/OpenGLDers30.exe",
                "miDebuggerPath": "gdb.exe"
            },             
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                    "console": "externalTerminal",
                }
            ],
            "preLaunchTask": "Make"
        }
    ]
}